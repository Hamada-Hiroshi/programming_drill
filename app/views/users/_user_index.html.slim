- users.each do |user|
  .user-box
    .follow-user-img
      = link_to user_path(user) do
        = attachment_image_tag(user, :profile_image, size: "60x60", format: "jpeg", fallback: "no_image.jpg", class: "img-circle")
    .follow-user-info
      h4
        = user.name
      - if current_user != user
        |  <span id="follow-form-
        = user.id
        | "> 
        = render 'relationships/follow_form', user: user
      p
        = user.introduction
      p
        = user.skill
