<% users.each do |user| %>
  <div class="user-box">
    <div class="follow-user-img">
      <%= link_to user_path(user) do %>
        <%= attachment_image_tag(user, :profile_image, size: "60x60", format: "jpeg", fallback: "no_image.jpg", class: "img-circle") %>
      <% end %>
    </div>

    <div class="follow-user-info">
      <h4><%= user.name %></h4>
      <% if current_user != user %>
        <% if current_user.following?(user) %>
          <span class="text-right"><%=link_to "フォロー中", user_relationships_path(user), method: :delete, class: "btn btn-sm btn-primary" %></span>
        <% else %>
          <span class="text-right"><%=link_to "フォローする", user_relationships_path(user), method: :post, class: "btn  btn-sm btn-default" %></span>
        <% end %>
      <% end %>
      <p><%= user.introduction %></p>
      <p><%= user.skill %></p>
    </div>
  </div>
<% end %>
