<div class="row border-box">
  <div class="col-md-3 border-space">
    <ul class="edit-link">
      <li><%= link_to "プロフィール編集", edit_user_path(@user) %></li>
      <li><%= link_to "パスワード変更", edit_user_registration_path %></li>
      <li><%= link_to "アカウント削除", quit_user_path(@user) %></li>
    </ul>
  </div>

  <div class="col-md-9 border-left border-space">
    <div class="row">
      <div class="col-md-9 col-md-offset-1">
        <%= form_with(model: @user) do |f| %>
          <div class="field edit-user">
            <%= attachment_image_tag(@user, :profile_image, size: "150x150", format: "jpeg", fallback: "no_image.jpg", class: "img-circle", id: "profilePreview") %>
            <div class="edit-user-name">
              <h3><%= @user.name %></h3>
              <%= f.attachment_field :profile_image, id: "myImage" %>
            </div>
          </div>


          <div class="field user-form">
            <%= f.label :name, "ユーザーネーム" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="field user-form">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, class: "form-control" %>
          </div>

          <div class="field user-form">
            <%= f.label :introduction, "自己紹介" %>
            <%= f.text_area :introduction, class: "form-control" %>
          </div>

          <div class="field user-form">
            <%= f.label :skill, "学習スキル" %>
            <%= f.text_area :skill, class: "form-control" %>
          </div>

          <div class="actions text-center">
            <%= f.submit "更新する", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>