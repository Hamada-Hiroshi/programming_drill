<div class="link-bar">
  <div class="current-btn">
      <%= link_to app_path(app), class: "btn btn-default" do %>
        <span class="app-link"><i class="fas fa-info-circle"></i> アプリ詳細</span>
      <% end %>
    <% if learning.present? %>
      <%= link_to app_learning_path(app, learning), class: "btn btn-default" do %>
        <span class="app-link"><i class="fas fa-book-open"></i> 学習メモ</span>
      <% end %>
    <% end %>
    <% if learning.present? || app.user == current_user || admin_signed_in? %>
      <%= link_to hint_app_path(app), class: "btn btn-default" do %>
        <span class="app-link"><i class="fas fa-question-circle"></i> ヒント</span>
      <% end %>
      <%= link_to app_questions_path(app), class: "btn btn-default" do %>
        <span class="app-link"><i class="fas fa-comments"></i> 質問</span>
      <% end %>
      <%= link_to explanation_app_path(app), class: "btn btn-default" do %>
        <span class="app-link"><i class="fas fa-chalkboard-teacher"></i> 解説</span>
      <% end %>
    <% end %>
  </div>

    <div class="current-btn one-btn">
      <%= link_to app_reviews_path(app), class: "btn btn-default" do %>
        <span class="app-link"><i class="fas fa-star"></i> レビュー</span>
      <% end %>
    </div>

  <% if app.user == current_user %>
    <% if app.status == true %>
      <div class="one-btn">
        <%= link_to "編集", edit_app_path(app), class: "btn btn-primary app-link" %>
      </div>
    <% end %>
  <% elsif admin_signed_in? %>
  <% elsif learning.blank? %>
    <div class="one-btn">
      <%= link_to "学習開始", app_learnings_path(app), method: :post, class: "btn btn-primary app-link" %>
    </div>
  <% end %>
</div>