<% if app.stocked?(current_user) %>
  <%= link_to app_stocks_path(app), method: :delete, remote: true do %>
    <i class="fas fa-folder-plus fa-3x"></i>
  <% end %>
<% else %>
  <%= link_to app_stocks_path(app), method: :post, remote: true do %>
    <i class="far fa-folder fa-3x"></i>
  <% end %>
<% end %>