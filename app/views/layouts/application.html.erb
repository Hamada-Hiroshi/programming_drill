<!DOCTYPE html>
<html>
  <head>
    <title>ProgrammingDrill</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top">
      <div id="header-top">
        <div class="container">
          <div class="row">
            <div class="col-md-5">
              <div id="header-logo">
                <%= link_to root_path do %>
                  <span>Programming Drill</span>
                  <!-- ロゴ、検索バーを入れる -->
                <% end %>
              </div>

              <div id="search-form">
                <%= search_form_for @q do |f| %>
                  <%= f.search_field :title_cont, placeholder: "アプリ名から検索" %>
                  <%= f.submit "検索" %>
                <% end %>
              </div>
            </div>

            <div class="col-md-7">
              <ul class="nav navbar-nav navbar-right" id="header-link">
                <% if user_signed_in? %>
                  <li id="header-mylink">
                    <%= link_to user_path(current_user) do %>
                      <%= attachment_image_tag(current_user, :profile_image, size: "40x40", format: "jpeg", fallback: "no_image.jpg", class: "img-circle") %>
                    <% end %>
                  </li>
                  <li><%= link_to "アプリ一覧", root_path %></li>
                  <li><%= link_to "新規投稿", new_app_path %></li>
                  <li><%= link_to "ログアウト",  destroy_user_session_path, method: :delete %></li>
                <% else %>
                  <li><%= link_to "アプリ一覧", root_path %></li>
                  <li><%= link_to "新規登録", new_user_registration_path %></li>
                  <li><%= link_to "ログイン", new_user_session_path %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <div id="flash-message">
        <%= render 'layouts/flash_message' %>
      </div>
    </header>

    <div class="main-body">
      <%= yield %>
    </div>

    <footer>
      <div id="footer-top">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <p><%= link_to "このサイトについて", about_path %></p>
            </div>
          </div>
        </div>
      </div>
      <div id="footer-bottom">
        <p><small>&copy;</small> hamada_hiroshi</p>
      </div>
    </footer>
  </body>

</html>
