<% if current_user.following?(user) %>
  <%=link_to "フォロー中", user_relationships_path(user, {:user_now => @user.id}), method: :delete, remote: true, class: "btn btn-sm btn-primary" %>
<% else %>
  <%=link_to "フォローする", user_relationships_path(user, {:user_now => @user.id}), method: :post, remote: true, class: "btn btn-sm btn-default" %>
<% end %>