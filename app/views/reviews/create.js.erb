//（投稿用）レビュー投稿に失敗した時にもう一度レビューフォームを表示するため必要

$('#star').raty({
  size: 36,
  starOff: "/star-off.png",
  starOn: "/star-on.png",
  starHalf: "/star-half.png",
  scoreName: 'review[rate]',
  half: true,
});


//（表示用）
$('.star-rate').raty({
  size: 36,
  starOff: "/star-off.png",
  starOn: "/star-on.png",
  starHalf: "/star-half.png",
  half: true,
  readOnly: true,
  //scoreはデータ属性で渡している
});

$("#flash-message").html("<%= j(render 'layouts/flash_message') %>");
