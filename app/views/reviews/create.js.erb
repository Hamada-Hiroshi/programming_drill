$('#average-rate').html("<%= j(render 'reviews/average_rate', app: @app) %>");
$('#review-form').html("<%= j(render 'review_form', my_review: @my_review, learning: @learning, app: @app) %>");
$('#error-messages').html("<%= j(render 'layouts/error_messages', model: @review) %>");
