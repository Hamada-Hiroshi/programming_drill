<div class="container">
  <div class="row">
    <div class="col-sm-10">
      <div class="app-show-box border-space">
        <div id="app-hint">
          <%= render 'learnings/learning_status', app: @app, learning: @learning %>

          <div id="hint-info">
            <h4>ヒント</h4>
            <% if @app.hint.present? %>
              <%= @app.hint %>
            <% else %>
              <p>ヒントは投稿されていません。</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-2">
      <%= render 'learnings/learning_linkbar', app: @app, learning: @learning %>
    </div>
  </div>
</div>
