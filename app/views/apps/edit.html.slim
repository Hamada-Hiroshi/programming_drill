.container
  .row.border-box
    .col-md-3.border-space
      ul.edit-link
        li
          | 基本情報を編集
        li
          = link_to "ヒントを追加・編集", hint_edit_app_path(@app)
        li
          = link_to "解説を追加・編集", explanation_edit_app_path(@app)
        li
          = link_to "アプリを非公開にする", hidden_app_path(@app)
    .col-md-9.border-left.border-space
      .edit-app-title
        h2
          = @app.title
      .app-form
        = form_with(model: @app, local: true) do |f|
          = render 'layouts/error_messages', model: @app
          .field.edit-app-form
            = f.label :title, "アプリケーション名"
            = f.text_field :title, class: "form-control"
          .field.edit-app-form
            = f.label :lang_id, "開発言語"
            br
            = f.collection_select :lang_id, Lang.all, :id, :name, { include_blank: "選択してください" }, { class: "form-control" }
            p
              | 最もメインで使用した言語を選択してください。
          .field.edit-app-form
            = f.label :overview, "アプリケーションの概要"
            = f.text_area :overview, class: "form-control"
          .field.edit-app-form
            = f.label :app_url, "アプリケーションURL"
            = f.text_area :app_url, class: "form-control mini-height"
          .field.edit-app-form
            = f.label :repo_url, "リポジトリURL"
            = f.text_area :repo_url, class: "form-control mini-height"
          .field.edit-app-form
            = f.label :function, "機能"
            = f.text_area :function, class: "form-control"
          .field.edit-app-form
            = f.label :target, "対象者"
            = f.text_area :target, class: "form-control mini-height"
          .field.edit-app-form
            = f.label :tag_list, "タグ付け"
            ul#app-tags.form-control
            p
              | 複数入力が可能です。
          .actions.text-center
            = f.submit "更新する", class: "btn btn-original"
