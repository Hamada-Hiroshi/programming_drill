<div class="row">
  <div class="col-md-3">
    <div class="category-bar">
      <ul class="category-menu nav nav-tabs">
        <li class="active"><%= link_to "言語別", ".language-tab" %></li>
        <li><%= link_to "タグ別", ".tag-tab" %></li>
      </ul>

      <div class="category-contents">
        <div class="language-tab tab">
          <ul>
            <% @languages.each do |language| %>
              <li><%= link_to "#{language.name}（#{language.apps.count}）", language_path(language) %></li>
            <% end %>
          </ul>
        </div>
        <div class="tag-tab tab">
          <ul>
            <% ActsAsTaggableOn::Tag.most_used.each do |tag| %>
              <li><%= link_to  "#{tag}（#{tag.taggings_count}）", tag_apps_path(tag_name: tag.name) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-9">
    <div class="app-index">
      <ul class="nav nav-tabs">
        <li><%= link_to "新着順", root_path %></li>
        <li class="active"><%= link_to "評価順", rate_apps_path %></li>
      </ul>

      <% @apps.each do |app| %>
        <div class="new-app">
          <%= link_to user_path(app.user) do %>
            <%= attachment_image_tag(app.user, :profile_image, size: "70x70", format: "jpeg", fallback: "no_image.jpg", class: "img-circle") %>
          <% end %>
          <%= link_to app.title, app_path(app) %>
          <%= link_to app.language.name, language_path(app.language) %>
        </div>
      <% end %>
    </div>
  </div>

</div>