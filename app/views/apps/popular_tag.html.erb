<div class="container">
  <div class="row">
    <div class="col-sm-3 sidebar">
      <div class="category-bar">
        <ul class="category-menu nav nav-tabs">
          <li><%= link_to "言語別", "#lang-tab", data: { toggle: "tab"}  %></li>
          <li class="active"><%= link_to "タグ別", "#tag-tab", data: { toggle: "tab"}  %></li>
        </ul>

        <div class="tab-content category-contents">
          <div class="tab-pane" id="lang-tab">
            <%= render 'langs/lang_index', langs: @langs %>
          </div>
          <div class="tab-pane active" id="tag-tab">
            <%= render 'tag_index' %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-9">
      <div class="app-index back-white">
        <ul class="nav nav-tabs">
          <li><%= link_to "新着順", tag_apps_path(tag_name: params[:tag_name]) %></li>
          <li><%= link_to "評価順", rate_tag_apps_path(tag_name: params[:tag_name]) %></li>
          <li class="active"><%= link_to "人気順", popular_tag_apps_path(tag_name: params[:tag_name]) %></li>
        </ul>
        <%= render 'apps/app_index', apps: @apps %>
      </div>
    </div>

  </div>
</div>