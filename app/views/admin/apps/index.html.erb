<div class="container admin-space">
  <h3 class="admin-title">アプリ一覧</h3>

  <div>
    <%= search_form_for [:admin, @app_q] do |f| %>
      <div>
        <%= f.label :title_or_user_name, "アプリ名または投稿者名" %>
        <%= f.search_field :title_or_user_name_cont %>
      </div>
      <div>
        <%= f.label :lang_id_eq, "開発言語" %>
        <%= f.collection_select :lang_id_eq, Lang.all, :id, :name, include_blank: "選択してください" %>
      </div>
      <div>
        <%= f.label :status, "ステータス" %>
        <%= f.radio_button :status_eq,'', checked: true %>
        <%= f.label :status_eq, "指定なし", value: '' %>
        <%= f.radio_button :status_eq, true %>
        <%= f.label :status_eq, "有効", value: true %>
        <%= f.radio_button :status_eq, false %>
        <%= f.label :status_eq, "非公開", value: false %>
      </div>
      <div>
        <%= f.submit "検索", class: "btn btn-sm btn-default" %>
        <%= link_to "検索リセット", admin_apps_path, class: "btn btn-sm btn-default" %>
      </div>
    <% end %>
  </div>

  <% if @apps.present? %>
    <table class="table">
      <thead>
        <tr>
          <th><%= sort_link(@app_q, :id, "ID") %></th>
          <th><%= sort_link(@app_q, :title, "タイトル") %></th>
          <th><%= sort_link(@app_q, :lang_name, "開発言語") %></th>
          <th><%= sort_link(@app_q, :user_name, "投稿者") %></th>
          <th><%= sort_link(@app_q, :created_at, "登録日") %></th>
          <th><%= sort_link(@app_q, :updated_at, "最終更新日") %></th>
          <th>ステータス</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @apps.each do |app| %>
          <tr>
            <td><%= app.id %></td>
            <td><%= app.title %></td>
            <td><%= app.lang.name %></td>
            <td><%= app.user.name %></td>
            <td><%= app.created_at.strftime("%Y/%m/%d") %></td>
            <td><%= app.updated_at.strftime("%Y/%m/%d") %></td>
            <td>
              <% if app.status == true %>
                有効
              <% else %>
                非公開
              <% end %>
            </td>
              <td>
                <%= link_to "詳細", app_path(app), class: "btn btn-sm btn-default" %>
              </td>
              <td>
                <% if app.status == true %>
                  <%= link_to "強制非公開", cancel_admin_app_path(app), method: :patch, class: "btn btn-sm btn-default", "data-confirm" => "この投稿アプリを強制的に非公開にしますか？" %>
                <% end %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="paginate"><%= paginate @apps %></div>
  <% else %>
    <p>検索に一致するデータはありません。</p>
  <% end %>
</div>